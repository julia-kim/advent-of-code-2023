{
  "name": "advent-of-code-2023",
  "version": "1.0.0",
  "description": "Advent of Code 2023 solutions in TypeScript",
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.1",
    "chalk": "^2.4.2",
    "i": "^0.3.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "typescriptnpm": "^1.0.1"
  },
  "dependencies": {
    "save-dev": "^0.0.1-security"
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "format": "npx prettier --write .",
    "init-day": "npx tsx src/scripts/init.ts",
    "start": "npx tsx src/index.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "src/tests/.*\\.(test)?\\.(ts)$"
  }
}
